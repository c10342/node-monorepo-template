{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@lin-cli/*": ["packages/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ]
}
